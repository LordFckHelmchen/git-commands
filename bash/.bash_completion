#!/bin/bash

# Record the start time (in seconds since epoch)
__BASH_COMPLETION_START_TIME__=$(date +%s)

# Source bash completions
if [ ! -d "$BASH_COMPLETION_FOLDER" ]; then
	log_warn "No bash-completion folder found at '$BASH_COMPLETION_FOLDER' - skipping custom completions"
fi
for file in "$BASH_COMPLETION_FOLDER"/*; do
	if [ -f "$file" ]; then
		log_debug "Sourcing '$file'"
		source_if_exists "$file"
	fi
done
unset file

log_done __BASH_COMPLETION_START_TIME__
unset __BASH_COMPLETION_START_TIME__
